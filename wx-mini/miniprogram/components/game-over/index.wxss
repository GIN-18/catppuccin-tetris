.separate{
  box-sizing: border-box;
  display: flex;
  justify-content: center;
  align-items: center;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: var(--bg-page);
  opacity: 0.9;
}

.info-container {
  box-sizing: border-box;
  display: flex;
  justify-content: center;
  align-items: center;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.info {
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 32rpx;
  border: 4rpx solid var(--text-page);
  border-radius: 10rpx;
  font-size: 24rpx;
  background-color: var(--bg-page);
}

.title {
  box-sizing: border-box;
  margin-bottom: 32rpx;
  font-size: 64rpx;
  font-family: Dubtronic Inline;
}